{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "noImplicitAny":false,
    "lib": ["es2015", "dom"],
  },
  "include": [
    "./src/**/*",
    "./src/*"
  ]
}